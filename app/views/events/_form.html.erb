<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render "#{@event.current_step}_step", :f => f%>
  
  <p>
	  <% submit_message = "Next -->"%>
	  <% submit_message = "Save" unless @event.first_step? %>
	  <%= f.submit "<-- Back", :name => "back_button" unless @event.first_step? %>
	  <%= f.submit submit_message, :name => "next_button" %>
  </p>

<% end %>
